<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="@color/primarycolor"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/geotag_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" Store Entry"
                    android:textColor="#e2e2e2"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:orientation="vertical" >
            </LinearLayout>

            
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:orientation="horizontal"
                android:weightSum="100" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/deepfreezer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/deep_freezer" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/openingstock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/opening_stock" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="100" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/prommotion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/promotion" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/facingcompetitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/competition" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="3"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="100" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/assets"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/asset" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/midstock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/mid_stock" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gap"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="3"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/midclose_layout"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="100" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/calls"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/calls" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/closingstock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/closing_stock" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gap_calls"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="3"
               
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
               android:id="@+id/food_layout"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="100" 
                 android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/foodstore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/food">
                    
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/foodstorecomplete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/food"
                    android:visibility="visible" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>
            </LinearLayout>
            
             <LinearLayout
                android:id="@+id/gapfoodbelow"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="3"
                 android:orientation="vertical" >
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:orientation="horizontal"
                android:weightSum="100" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15" >
                </ImageView>

                <Button
                    android:id="@+id/performance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/my_performance" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" >
                </ImageView>

                <Button
                    android:id="@+id/fd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:visibility="gone"
                    android:background="@drawable/opening_stock" >
                </Button>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="3"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>